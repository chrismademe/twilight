<div x-data="{ isOpen: {{ isOpen ? 'true' : 'false' }} }" class="Drawer">
    {{ slots.trigger | raw }}
    <Button
        @html="toggleText | default('Toggle Drawer')"
        @if="not slots.trigger"
        x-on:click="isOpen = !isOpen"
        type="button"
    />
    <Element
		is="div"
        :class="{
            'Drawer__Modal fixed bottom-0 inset-x-0 bg-primary-contrast text-white transition duration-300 ease-in-out z-50 md:left-auto md:h-screen': true,
            'md:w-64': size == 'sm',
            'md:w-80': not size or size == 'base',
            'md:w-96 xl:w-120': size == 'lg',
            'md:w-120 xl:w-132': size == 'xl',
        } | cls"
        x-cloak
        x-bind:aria-hidden="!isOpen"
        x-bind:data-state="isOpen ? 'open' : 'closed'"
        x-on:keyup.escape="isOpen = false"
    >
        {{ slots.close | raw }}
        <Button
            @html="closeText | default('Close Drawer')"
            @if="not slots.close"
            x-on:click="isOpen = false"
            type="button"
        />
        {{ children | raw }}
    </Element>
</div>