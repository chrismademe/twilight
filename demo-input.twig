{% set tagName = href ? 'a' : 'button' %}

<Element
    :is="tagName"
	:class="['btn', class] | join(' ')"
	:data-variant="variant"
	:data-size="size"
	:data-icon-position="iconPosition"
	:data-has-icon="icon ? 'true' : 'false'"
	:href="href"
	:type="type"
	@attributes
>
	<Icon @if="icon" :name="icon" class="w-5 h-5" />
	{{ children | raw }}
</Element>

<CustomComponent @attributes @for="item in fields.items" :title="item.title" />

<p @text="globals.phone" />